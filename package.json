{
  "name": "@justsml/auto-config",
  "description": "A Unified Config & Arguments Library for Node.js. Featuring support for environment variables, command line arguments, and JSON files!",
  "version": "1.0.0",
  "type": "commonjs",
  "private": false,
  "packageManager": "yarn@1.10.0",
  "engineStrict": true,
  "engines": {
    "yarn": ">=1.10.0",
    "node": ">=12.0.0"
  },
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "publish": "npm publish --access public",
    "pretest": "npm run build",
    "test": "jest",
    "test:coverage": "npm test --coverage",
    "build": "npx tsc"
  },
  "keywords": [
    "config",
    "nodejs",
    "command-line",
    "arguments",
    "environment",
    "variables"
  ],
  "author": {
    "name": "justsml",
    "url": "https://danlevy.net"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^26.0.3",
    "@types/lodash": "^4.14.178",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.11.12",
    "jest": "^26.6.0",
    "ts-jest": "^26.5.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "zod": "^3.11.6"
  },
  "files": [
    "dist"
  ],
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": false
        }
      ]
    ]
  }
}
