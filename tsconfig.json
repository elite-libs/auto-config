{
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    // "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    // "jsx": "preserve",
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    // "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "useUnknownInCatchVariables": false,
    "types": ["node", "jest"],
    "typeRoots": [
      "node_modules/@types"
    ],

  },
  "include": [
    "examples/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
    // "client/**/*.ts",
    // "client/**/*.tsx",
    // "client/**/*.d.ts",
  ],
  "exclude": ["**/node_modules", "**/.*/", "**/dist", "client"]
}
